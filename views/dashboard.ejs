<!DOCTYPE html>
<html lang="en">
  <%- include("includes/head") %>
  <body>
    <%- include("includes/header") %>
    <main>
      <% if (posts.length == 0) { %>
      <h4>Hello <mark> <%= user.username %></mark>, please create your posts!</h4>
      <% } else { %>
      <h4>Hello <mark> <%= user.username %></mark>, here are your posts:</h4>
      <% } %>
      <ul>
        <% posts.forEach(post => { %>
        <li>
          <a href="/post/<%= post.id %>"><%= post.title %></a> on <%= new Date(post.createdDate).getFullYear() %>-<%=
          (new Date(post.createdDate).getMonth()+1 ).toString().padStart(2, '0')%>-<%= new
          Date(post.createdDate).getDate().toString().padStart(2, '0') %>
        </li>
        <% }) %>
      </ul>
    </main>
    <%- include("includes/footer") %>
  </body>
</html>
