<!DOCTYPE html>
<html lang="en">
  <%- include("includes/head") %>
  <body>
    <%- include("includes/header") %>
    <main>
      <h2>Welcome to Your dashboard</h2>

      <ul>
        <% posts.forEach(post => { %>
        <li>
          <a href="/post/<%= post.id %>"><%= post.title %></a> on <%= new Date(post.createdDate).getFullYear() %>-<%=
          (new Date(post.createdDate).getMonth()+1 ).toString().padStart(2, '0')%>-<%= new
          Date(post.createdDate).getDate().toString().padStart(2, '0') %>
        </li>
        <% }) %>
      </ul>
    </main>
    <%- include("includes/footer") %>
  </body>
</html>
